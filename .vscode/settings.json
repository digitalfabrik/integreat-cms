{
    "ruff.lint.args": [
        "--config=${workspaceFolder}/pyproject.toml",
        "--fix"
    ],
    "ruff.format.args": [
        "--config=${workspaceFolder}/pyproject.toml",
        "--preview"
    ],
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": "always",
            "source.organizeImports": "always"
        },
        "editor.defaultFormatter": "charliermarsh.ruff"
    }
}